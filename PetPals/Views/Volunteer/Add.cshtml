@using PetPals.Web.ViewModels.Volunteer
@model VolunteerFormModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Volunteer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 83px auto 0; /* Add 50px to the top margin */
            padding: 20px;
            background-color: #ffe9d2;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
        }

        form {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #34495e;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        textarea.form-control {
            height: 100px;
            resize: vertical;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }

        .btn {
            display: inline-block;
            background-color: #3498db;
            color: #ffffff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>
    <h1>Add New Volunteer</h1>

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name" class="form-control" id="Name" name="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ContactInfo">Contact Info</label>
            <input asp-for="ContactInfo" class="form-control" id="ContactInfo" name="ContactInfo" />
            <span asp-validation-for="ContactInfo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Task">Task</label>
            <textarea asp-for="Task" class="form-control" id="Task" name="Task"></textarea>
            <span asp-validation-for="Task" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input asp-for="StartDate" class="form-control" id="StartDate" name="StartDate" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="EndDate">End Date</label>
            <input asp-for="EndDate" class="form-control" id="EndDate" name="EndDate" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn">Add</button>
    </form>
</body>
</html>

