@model PetFormModel

@{
    ViewData["Title"] = "Pet Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center">Pet Registration</h1>
    <form asp-controller="Pet" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name">Pet Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Species">Species</label>
            <select asp-for="Species" class="form-control">
                <option value="">Select species</option>
                <option value="Dog">Dog</option>
                <option value="Cat">Cat</option>
                <option value="Bird">Bird</option>
                <option value="Fish">Fish</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Species" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Breed">Breed</label>
            <input asp-for="Breed" class="form-control" />
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HealthStatus">Health Status</label>
            <textarea asp-for="HealthStatus" class="form-control"></textarea>
            <span asp-validation-for="HealthStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AdoptionStatus">Adoption Status</label>
            <select asp-for="AdoptionStatus" class="form-control">
                <option value="Available">Available</option>
                <option value="Pending">Pending</option>
                <option value="Adopted">Adopted</option>
            </select>
            <span asp-validation-for="AdoptionStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhotoPath">Photo URL</label>
            <input asp-for="PhotoPath" class="form-control" />
            <span asp-validation-for="PhotoPath" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Register</button>
    </form>
</div>
