@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div class="auth-links">
    @if (SignInManager.IsSignedIn(User))

    {
        <form class="nav-item logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" style="display: inline;">
            <button type="submit" class="nav-link logout-button">Logout</button>
        </form>
    }
    else
    {

        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-user"></i></a>

    }
</div>

