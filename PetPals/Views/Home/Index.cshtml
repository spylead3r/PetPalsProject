@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to Index</h1>


<a asp-controller="Pet" asp-action="Add" class="btn btn-primary">Add New Pet</a>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PetPals - Find Your Furry Friend</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4CAF50;
            --secondary-color: #FFA000;
            --text-color: #333;
            --background-color: #f4f4f4;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: var(--background-color);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header Styles */
        header {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            position: fixed;
            width: 100%;
            z-index: 1000;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .nav-links {
            display: flex;
            list-style: none;
        }

        .nav-links li {
            margin-left: 1.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--text-color);
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: var(--primary-color);
        }

        /* Hero Section Styles */
        .hero {
            background-image: url('https://source.unsplash.com/1600x900/?pets');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            text-align: center;
            color: #fff;
            position: relative;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .btn {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: #fff;
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            color: #fff;
        }

        .btn:hover {
            opacity: 0.9;
        }

        /* Featured Pets Section Styles */
        .featured-pets {
            padding: 4rem 0;
            background-color: #fff;
        }

        .section-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .pets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .pet-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .pet-card:hover {
            transform: translateY(-5px);
        }

        .pet-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .pet-info {
            padding: 1rem;
        }

        .pet-info h3 {
            margin-bottom: 0.5rem;
        }

        /* Events Section Styles */
        .events {
            padding: 4rem 0;
            background-color: var(--background-color);
        }

        .events-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .event-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 1.5rem;
        }

        .event-card h3 {
            margin-bottom: 0.5rem;
        }

        /* Volunteer Section Styles */
        .volunteer {
            padding: 4rem 0;
            background-color: #fff;
            text-align: center;
        }

        .volunteer p {
            max-width: 600px;
            margin: 0 auto 2rem;
        }

        /* Testimonials Section Styles */
        .testimonials {
            padding: 4rem 0;
            background-color: var(--background-color);
        }

        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .testimonial-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 1.5rem;
        }

        .testimonial-card img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        /* Footer Styles */
        footer {
            background-color: #333;
            color: #fff;
            padding: 3rem 0;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
        }

        .footer-section h3 {
            margin-bottom: 1rem;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 0.5rem;
        }

        .footer-links a {
            color: #fff;
            text-decoration: none;
        }

        .social-icons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .social-icons a {
            color: #fff;
            font-size: 1.5rem;
        }

            .hero p {
                font-size: 1rem;
            }

            .nav-links {
                display: none;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="container">
            <div class="logo">PetPals</div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#featured-pets">Pets</a></li>
                <li><a href="#events">Events</a></li>
                <li><a href="#volunteer">Volunteer</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section id="home" class="hero">
            <div class="container hero-content">
                <h1>Welcome to PetPals</h1>
                <p>Find your furry friend or support our cause today!</p>
                <a href="#" class="btn btn-primary">Adopt a Pet</a>
                <a href="#" class="btn btn-secondary">Make a Donation</a>
            </div>
        </section>

        <section id="featured-pets" class="featured-pets">
            <div class="container">
                <h2 class="section-title">Meet Our Pets</h2>
                <div class="pets-grid">
                    <div class="pet-card">
                        <img src="https://source.unsplash.com/300x200/?dog" alt="Dog">
                        <div class="pet-info">
                            <h3>Buddy</h3>
                            <p>2 years old, Labrador</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                    <div class="pet-card">
                        <img src="https://source.unsplash.com/300x200/?cat" alt="Cat">
                        <div class="pet-info">
                            <h3>Whiskers</h3>
                            <p>1 year old, Siamese</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                    <div class="pet-card">
                        <img src="https://source.unsplash.com/300x200/?rabbit" alt="Rabbit">
                        <div class="pet-info">
                            <h3>Fluffy</h3>
                            <p>6 months old, Holland Lop</p>
                            <a href="#" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="events" class="events">
            <div class="container">
                <h2 class="section-title">Upcoming Events</h2>
                <div class="events-list">
                    <div class="event-card">
                        <h3>Adoption Fair</h3>
                        <p>Date: June 15, 2023</p>
                        <p>Location: Central Park</p>
                        <p>Join us for a day of fun and meet your potential new family member!</p>
                        <a href="#" class="btn btn-secondary">View Details</a>
                    </div>
                    <div class="event-card">
                        <h3>Fundraising Gala</h3>
                        <p>Date: July 1, 2023</p>
                        <p>Location: Grand Hotel</p>
                        <p>Help us raise funds for our new shelter building. Dinner and entertainment included!</p>
                        <a href="#" class="btn btn-secondary">View Details</a>
                    </div>
                </div>
            </div>
        </section>

        <section id="volunteer" class="volunteer">
            <div class="container">
                <h2 class="section-title">Join as a Volunteer</h2>
                <p>Help us make a difference in the lives of pets. Join our team of volunteers today!</p>
                <a href="#" class="btn btn-primary">Become a Volunteer</a>
            </div>
        </section>

        <section id="testimonials" class="testimonials">
            <div class="container">
                <h2 class="section-title">Happy Tails</h2>
                <div class="testimonial-grid">
                    <div class="testimonial-card">
                        <img src="https://source.unsplash.com/60x60/?person" alt="Sarah">
                        <h3>Sarah M.</h3>
                        <p>"Adopting from PetPals was the best decision I've ever made. My new cat, Mittens, has brought so much joy to my life!"</p>
                    </div>
                    <div class="testimonial-card">
                        <img src="https://source.unsplash.com/60x60/?man" alt="John">
                        <h3>John D.</h3>
                        <p>"The staff at PetPals were incredibly helpful throughout the adoption process. I couldn't be happier with my new dog, Max!"</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer id="contact">
        <div class="container footer-content">
            <div class="footer-section">
                <h3>About PetPals</h3>
                <p>PetPals is dedicated to finding loving homes for pets in need and supporting animal welfare in our community.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="#">Adopt a Pet</a></li>
                    <li><a href="#">Donate</a></li>
                    <li><a href="#">Volunteer</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Contact Information</h3>
                <p>Email: support@petpals.com</p>
                <p>Phone: 123-456-7890</p>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>


